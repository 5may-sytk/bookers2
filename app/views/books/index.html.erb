<div>
  <%= flash[:alert] %>
</div>

<div id="error box">
  <% if @book.present? && @book.errors.any? %>
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class='container px-5 px-sm-0'>
	<div class='row'>
    <%= render 'layouts/sidebar', book: @book, user: @user %>
		<div class='col-md-8 offset-md-1'>
			<h2>Books</h2>
			<!-- 投稿した書籍一覧表示を作成しましょう。 -->
			<table class='table table-hover table-inverse'>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
				<% @books.each do |book,user| %>
					<tr>
            <td>
              <span>
                <%= image_tag user.get_profile_image(80, 80)  %>
              </span>
            </td>
						<td>
							<span><%= book.title %></span>
            </td>
            <td>
							<span><%= book.body %></span>
					</tr>
				<% end %>
        </tbody>
			</table>
		</div>
	</div>
</div>