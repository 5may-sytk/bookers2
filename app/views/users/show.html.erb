<div>
  <%= flash[:notice] %>
</div>

<div class='container px-5 px-sm-0'>
	<div class='row'>
    <%= render 'layouts/sidebar', book: @book, user: @user %>
		<div class='col-md-8 offset-md-1'>
			<h2>Books</h2>
			<!-- 投稿した書籍一覧表示を作成しましょう。 -->
			<table class='table table-hover table-inverse'>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
				<% @books.each do |book| %>
          <tr>
            <td>
              <span>
								<%= link_to user_path(book.id) do %>
                <%= image_tag book.user.get_profile_image(80, 80)  %>
								<% end %>
              </span>
            </td>
						<td>
							<%= link_to book_path(book.id) do %>
							<span><%= book.title %></span>
							<% end %>
            </td>
            <td>
            </td>
            <td>
              <span><%= book.body %></span>
						</td>
					</tr>
				<% end %>
        </tbody>
			</table>
		</div>
	</div>
</div>