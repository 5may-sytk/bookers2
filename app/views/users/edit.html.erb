<div>
  <%= flash[:alert] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

      <div id="error box">
        <% if @user.present? && @user.errors.any? %>
          <h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_with model: @user do |f| %>
        <div class="form-grope">
          <label for="input Name">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
        </div>
        <div class="form-grope">
          <label for="input Image">Image</label><br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-grope">
          <label for="input Name">Introduction</label><br>
          <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction"%>
        </div>
        <div class="form-grope">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>